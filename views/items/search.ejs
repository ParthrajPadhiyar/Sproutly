<% layout("/layouts/boilerplate.ejs") %>

  <h2>Your search Seeds</h2>

  <% if(results.length> 0) {%>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3 items-container">
      <% for( let item of results ) { %>
        <a href="/items/<%= item._id %>" class="listing-link">
          <div class="card col listing-card">
            <img src="<%= item.image.url %>" class="card-img-top" alt="item_image" style="height: 20rem;">

            <div class="card-body text-center">
              <p class="card-text mb-0 mt-2">
                <b>
                  <%= item.title %>
              </p></b>
              <p>
                <%= item.gujname %>
              </p>
              <i class="fa fa-inr">
                <%= item.price.toLocaleString("en-IN") %>
              </i>

            </div>
            <div class="d-flex">
              <div class="flex-grow-1">
                <form action="/cart" method="post">
                  <input type="hidden" name="id" value="<%= item._id %>">
                  <button class="btn btn-success mt-2 w-100">Add to Cart</button>
                </form>
              </div>
              <div>
                <form action="/wishlist" method="post">
                  <input type="hidden" name="id" value="<%= item._id %>">
                  <button class="btn mt-2"><i class="fa-solid fa-heart text-success"></i></button>
                </form>
              </div>
            </div>
          </div>
        </a>
        <% } %>
    </div>
    <% } else { %>
      <h3>No results found for your search.</h3>
      <% } %>